<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp" >

    <LinearLayout
        android:id="@+id/lesson_number_holder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lesson_number_holder"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lesson_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#5d5d5d" />

            <TextView
                android:id="@+id/lesson_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#5d5d5d"
                android:textSize="9sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/divider1"
        android:layout_width="1dp"
        android:layout_height="44dp"
        android:layout_alignRight="@id/lesson_number_holder"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#d5d5d5"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lesson_holder"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/divider1"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/lesson_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#5a5a5a" />

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#5a5a5a" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/button_holder"
        android:background="#d5d5d5"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_holder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/lesson_go_button"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/navigation_forward" />
    </LinearLayout>

</RelativeLayout>