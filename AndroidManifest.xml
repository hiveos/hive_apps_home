<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hive.apps.home"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hive.apps.home.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/HomescreenTheme" >
<!--             android:theme="@android:style/Theme.Holo.Light.NoActionBar.TranslucentDecor" > -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="hive.apps.home.AppDrawer"
            android:label="Apps"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.TranslucentDecor" >
        </activity>
        <activity
            android:name="hive.apps.home.TimetableListView"
            android:label="Timetable"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.TranslucentDecor" >
        </activity>
    </application>

</manifest>